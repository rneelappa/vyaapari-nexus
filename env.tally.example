# Tally API Configuration for Ultimate ERP Integration
# Copy these variables to your .env file

# Tally API Backend (Railway Deployment)
VITE_TALLY_API_URL=https://tally-sync-vyaapari360-production.up.railway.app/api/v1

# Default Company and Division IDs
# Replace with actual company/division IDs from your Supabase database
VITE_DEFAULT_COMPANY_ID=629f49fb-983e-4141-8c48-e1423b39e921
VITE_DEFAULT_DIVISION_ID=37f3cc0c-58ad-4baf-b309-360116ffc3cd

# Feature Flags for Enhanced Components
VITE_ENABLE_ENHANCED_COMPONENTS=true
VITE_ENABLE_RELATIONSHIP_MAPPING=true
VITE_ENABLE_MONTHLY_ANALYSIS=true
VITE_ENABLE_BUSINESS_INTELLIGENCE=true

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_API_CALLS=false

# Production Settings
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
